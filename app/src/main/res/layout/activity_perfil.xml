<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkseagreen"
    android:orientation="vertical"
    tools:context="beerbear.caldasturistapp.PerfilActivity"
    >

    <TextView
        android:id="@+id/tPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/miperfil"
        android:textColor="@color/green"
        android:textSize="30sp" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/senorx"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tUsuario"
        android:textColor="@color/yellow"
        android:textSize="30sp"
        android:text="@string/username"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/tUsename"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tEmail"
        android:textColor="@color/red"
        android:textSize="30sp"
        android:text="@string/eMail"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/tMail"/>

</LinearLayout>
